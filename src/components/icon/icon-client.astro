---
import { cn } from '@/utils/cn';

import type { IconProps } from './icon.types';

export interface Props extends IconProps {
  set: string;
  icon: string;
}

const { set, icon, class: className, ...props } = Astro.props;
const finalClass = cn('flex items-center justify-center', className);
---

<iconify-icon icon={`${set}:${icon}`} class={finalClass} height="none" {...props}></iconify-icon>

<script>
  import 'iconify-icon';
</script>
