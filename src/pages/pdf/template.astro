---
import type { ComponentProps } from 'astro/types';

import MainTemplate from '@/pdf/templates/main-template.astro';
import AccentColors from '@/styles/colors/accent/indigo.astro';
import DuskColors from '@/styles/colors/dusk/slate.astro';
import ElementColors from '@/styles/colors/elements/default.astro';
import Font from '@/styles/fonts/inter.astro';

const props: ComponentProps<typeof MainTemplate> = {
  context: {
    locale: 'enUS',
    translations: 'en',
    dateFormat: 'MMMM yyyy',
    website: '/template',
  },
  basics: 'main-pdf',
  footer:
    'I hereby give consent for my personal data included in my application to be processed for the purposes of the recruitment process.',
  sections: [
    {
      collection: 'skills',
      title: 'Skills',
      subsections: [
        {
          title: 'Technologies',
          withLevel: true,
          // prettier-ignore
          entries: ['java', 'spring', 'hibernate', 'python', 'oracledb', 'postgresql', 'aws', 'talend', 'project-management'],
        },
        {
          title: 'Tools',
          entries: ['intellij', 'vsc', 'git', 'chat-gpt', 'deepl'],
        },
        {
          title: 'Languages',
          entries: ['polish', 'english', 'german'],
        },
      ],
    },
    {
      collection: 'jobs',
      title: 'Work',
      entries: ['kontial', 'cisco', 'capgemini'],
    },
    {
      collection: 'projects',
      title: 'Projects',
      entries: ['ascii-art'],
    },
    {
      collection: 'education',
      title: 'Education',
      entries: ['bachelor'],
    },
    {
      collection: 'interests',
      title: 'Interests',
      entries: ['kettlebell', 'gaming', 'martial-arts', 'chess'],
    },
  ],
};
---

<MainTemplate {...props}>
  <Fragment slot="head">
    <Font />
    <DuskColors />
    <AccentColors />
    <ElementColors />
  </Fragment>
</MainTemplate>
