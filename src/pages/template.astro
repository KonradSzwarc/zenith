---
import type { ComponentProps } from 'astro/types';

import AccentColors from '@/styles/colors/accent/indigo.astro';
import DuskColors from '@/styles/colors/dusk/slate.astro';
import ElementColors from '@/styles/colors/elements/default.astro';
import Font from '@/styles/fonts/inter.astro';
import MainTemplate from '@/web/templates/main-template.astro';

const props: ComponentProps<typeof MainTemplate> = {
  context: {
    locale: 'enUS',
    translations: 'en',
    dateFormat: 'MMMM yyyy',
    theme: 'custom',
    pdf: {
      path: '/generated/pdf/template.pdf',
      label: 'Download resume',
      filename: 'mark-freeman-resume.pdf',
    },
  },
  metadata: 'main',
  sidebar: [
    { sectionId: 'basics', icon: 'fa6-solid:user', text: 'About me' },
    { sectionId: 'skills', icon: 'fa6-solid:bars-progress', text: 'Skills' },
    { sectionId: 'jobs', icon: 'fa6-solid:suitcase', text: 'Work experience' },
    { sectionId: 'projects', icon: 'fa6-solid:rocket', text: 'Projects' },
    { sectionId: 'references', icon: 'fa6-solid:comment', text: 'References' },
    { sectionId: 'achievements', icon: 'fa6-solid:trophy', text: 'Achievements' },
    { sectionId: 'education', icon: 'fa6-solid:graduation-cap', text: 'Education' },
    { sectionId: 'favorites', icon: 'fa6-solid:star', text: 'Favorites' },
  ],
  basics: 'main',
  sections: [
    {
      collection: 'skills',
      title: 'Skills',
      subsections: [
        {
          title: 'Technologies',
          withLevel: true,
          // prettier-ignore
          entries: ['java', 'spring', 'hibernate', 'python', 'oracledb', 'postgresql', 'aws', 'talend', 'project-management'],
        },
        {
          title: 'Tools',
          entries: ['intellij', 'vsc', 'git', 'chat-gpt', 'deepl'],
        },
        {
          title: 'Languages',
          entries: ['polish', 'english', 'german'],
        },
      ],
    },
    {
      collection: 'jobs',
      title: 'Work',
      entries: ['kontial', 'cisco', 'capgemini'],
    },
    {
      collection: 'projects',
      title: 'Projects',
      entries: ['ascii-art'],
    },
    {
      collection: 'education',
      title: 'Education',
      entries: ['bachelor'],
    },
    {
      collection: 'interests',
      title: 'Interests',
      entries: ['kettlebell', 'gaming', 'martial-arts', 'chess'],
    },
  ],
};
---

<MainTemplate {...props}>
  <Fragment slot="head">
    <Font />
    <DuskColors />
    <AccentColors />
    <ElementColors />
  </Fragment>
</MainTemplate>
